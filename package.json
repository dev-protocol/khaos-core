{
	"name": "@devprotocol/khaos-core",
	"version": "0.0.1",
	"description": "Core library for Khaos",
	"main": "types.ts",
	"files": [
		"sign",
		"types.ts",
		"!**/*.test.*"
	],
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'"
	},
	"author": "aggre",
	"license": "MPL-2.0",
	"dependencies": {
		"@azure/functions": "^1.2.2",
		"ethereum-waffle": "3.2.1",
		"jsonwebtoken": "^8.5.1",
		"ramda": "^0.27.1"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/dotenv": "8.2.0",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/node": "14.14.14",
		"@types/ramda": "0.27.33",
		"@typescript-eslint/eslint-plugin": "4.10.0",
		"@typescript-eslint/parser": "4.10.0",
		"ava": "3.14.0",
		"dotenv": "8.2.0",
		"eslint": "7.15.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.1.0",
		"husky": "4.3.6",
		"prettier": "2.2.1",
		"rimraf": "3.0.2",
		"typescript": "4.1.3"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"src/": "/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/template-repos-ts.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/template-repos-ts/issues"
	},
	"homepage": "https://github.com/dev-protocol/template-repos-ts#readme"
}
